                    |energy
                .item 
                    i.leaf.icon
                    |zero waste
                .item 
                    i.smile.icon
                    |wellness
                .item 
                    i.university.icon
                    |education
                .item 
                    i.paint.brush.icon
                    |art
                .item 
                    i.users.icon
                    |community core
            .ui.header 
                |resources
            
                    
