            .twelve.wide.column
                .ui.header #{title}
                a.ui.small.header.inline.lowercase(href="/group/#{_id}/")
                    |#{price_per_serving}c / #{serving_unit}
                .ui.small.inline.header #{when}
                a.ui.button(href="/group/#{_id}/")
                    |view
                    i.right.chevron.icon
                if is_admin
                    +remove_button
    
    
    
