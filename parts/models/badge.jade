            .eight.wide.column
                .ui.header
                    +i name='badger'
                    |badgers
                each badgers
                    a.ui.compact.button(href="/user/#{username}") 
                        img.ui.avatar.image(src="{{c.url image_id height=200 width=200 gravity='face' crop='fill'}}")
