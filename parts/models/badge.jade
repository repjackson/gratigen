template(name='badge_edit')
    .ui.stackable.padded.grid
        .centered.middle.aligned.row 
            .sixteen.wide.column
                a.ui.green.cicular.icon.big.button.fly_left(href="/badge/#{_id}" title='save')
                    i.checkmark.big.icon
                .ui.inline.header
                    small edit badge
                    |#{title}
                i.remove.circular.link.icon.delete_item
        .row 
            .eight.wide.column
                +text_edit key='title' icon='header'
                +slug_edit key='slug' icon='slug'
                +icon_edit key='icon' label='icon'
                +textarea_edit key='description' label='description'
                +image_edit key='image_id' label='image'
                div 
                +array_edit key='tags' label='tags'
                +text_edit key='location' label='location' icon='marker'
                +array_edit key='location_tags' label='location_tags'
