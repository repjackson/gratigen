template(name='icons')
    .ui.stackable.padded.grid 
        .sixteen.wide.column
            .ui.inline.header 
                +i name='brain'
                |#{icon_count}
                |things
            .ui.inline.header 
                +icolor name='the-flash-head'
                |#{cam_count}
            .ui.inline.header 
                +icolor name='batman'
                |#{eric_count}
            each picked_tags_helper
                .ui.large.active.button.unpick
                    +gicon name=this cl=''
                    |#{this}
            .ui.inline.icon.input
                i.search.icon
                input.search_icon(type='text' placeholder='name...')
            each icon_tag_results 
                .ui.basic.compact.circular.icon.button.pick(title=count)
                    span.ginvert
                        // +i name=name
                        +gicon name=name
                    // +i name=name
                    |#{name}
                    // small #{count}
            div
            .ui.inline.header titles
            each title_results 
                .ui.basic.compact.circular.icon.button.pick_title(title=count)
                    span.ginvert
                        +icolor name=name
                    // +i name=name
                    |#{name}
                    // small #{count}
        .row.scrolling
            .ui.four.stackable.cards
                each icons_docs
                    +icon_item 
        
                
