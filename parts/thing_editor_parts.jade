template(name='eft_picker')
    if toggled
        .ui.animated.fade.tertiary.inverted.circular.large.button.toggle_eft.zoomer.invert(style="color:##{color}")
            .visible.content
                i.big.icon(class=icon)
            .hidden.content
                big #{label}
            // |&nbsp;
    else 
        a.ui.animated.fade.button.toggle_eft.invert.zoomer(style="color:##{color}" class=eft_picker_class)
            .visible.content
                i.large.icon(class=icon)
            .hidden.content
                |#{label}

