template(name='historybar')
    .ui.small.attached.menu 
        .item 
            i.clock.icon
            |history
        each currentUser.history_ids
            .item(title=this)
                i.remove.icon
                with doc_by_id
                    span.goto_doc.zoomer #{title}

template(name='mlayout')
